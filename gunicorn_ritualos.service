[Unit]
Description=Gunicorn instance to serve RitualOS
After=network.target

[Service]
User=deploy
Group=www-data
WorkingDirectory=/var/www/ritualos
Environment="PATH=/var/www/ritualos/venv/bin"
EnvironmentFile=/var/www/ritualos/.env
ExecStart=/var/www/ritualos/venv/bin/gunicorn --workers 3 --bind unix:ritualos.sock -m 007 wsgi:app

[Install]
WantedBy=multi-user.target
